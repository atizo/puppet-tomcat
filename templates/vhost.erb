<Host name="<%= domain %>" debug="0" appBase="webapps" unpackWARs="true">
  <% domainaliases.split(':').each do |domain_alias| -%> 
    <Alias><%= domain_alias %></Alias>
  <% end -%>
  <Logger className="org.apache.catalina.logger.FileLogger" directory="logs" prefix="<%= webappname %>." suffix=".log" timestamp="true"/>
  <Context path="" docBase="<%= webappname %>" debug="0" reloadable="true"/>
</Host>
